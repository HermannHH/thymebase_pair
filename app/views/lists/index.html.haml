%h1 Listing lists

= render partial: 'form', locals: { list: @list }

%table
  %thead
    %tr
      %th Name
      %th Todos
      %th
      %th

  %tbody
    - @lists.each do |list|
      %tr
        %td= list.name
        %td= link_to list.todos.size, list_todos_path(list_id: list.id)
        %td= link_to 'Show', list
        %td= link_to 'Edit', edit_list_path(list)
        %td= link_to 'Destroy', list, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New List', new_list_path
